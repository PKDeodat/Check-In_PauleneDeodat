        android:textSize="20dp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="507dp" />

    <Button
        android:id="@+id/signup2"
        android:layout_width="209dp"
        android:layout_height="38dp"
